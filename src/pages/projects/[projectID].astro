                    </div>
                </div>
            )} -->

        <p
            class="w-full text-justify text-[0.9em] max-sm:text-[0.8em] px-4 indent-12 font-poppins"
        >
            {project.Desc}
        </p>
    </div>

    <CenterTitle title="Features" classname="mt-10" />
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 md:mx-4">
        {
            project.features.map((feature) => (
                <div class="Fade_Up p-4 md:p-6 flex flex-col gap-3 bg-skillGradientAlt rounded-md shadow-front">
                    <span
                        class="font-orbitron smallCaps tracking-wider text-[0.9em] font-semibold text-primaryLite"
                        title={feature.title}
                    >
                        {feature.title}
                    </span>
                    <p
                        class="text-[0.8em] leading-relaxed font-poppins line-clamp-2"
                        title={feature.description}
                    >
                        {feature.description}
                    </p>
                </div>
            ))
        }
    </div>

    <CenterTitle title="Tech Stack" classname="mt-10" />
    <div
        class="Fade_Up gap-2 flex flex-wrap justify-center items-center mb-96 4xl:mb-[30rem]"
    >
        {
            project.Tech.map((tech) => (
                <div
                    title={tech.title}
                    class="Fade_Stagger flex_center flex-col gap-4 min-w-24 aspect-square rounded-lg bg-skillGradient shadow-front"
                >
                    <div class="flex_center min-h-[35px] aspect-square">
                        <Image
                            src={tech.icon}
                            alt={tech.title}
                            width={35}
                            height={35}
                        />
                    </div>
                    <span class="text-[0.7em] tracking-wider font-orbitron smallCaps font-light">
                        {tech.title}
                    </span>
                </div>
            ))
        }
    </div>
</ProjectLayout>


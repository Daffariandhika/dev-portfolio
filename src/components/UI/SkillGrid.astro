---
import { Image } from "astro:assets";

type Props = {
    stack: {
        name: string;
        icon: ImageMetadata;
    }[];
};

const { stack }: Props = Astro.props;
---

<div class="Fade_Up gap-2 flex flex-wrap justify-center items-center">
    {
        stack.map((obj) => (
            <div
                title={obj.name}
                class="Fade_Stagger flex_center flex-col gap-2 min-w-24 aspect-square rounded-lg bg-skillGradient shadow-front"
            >
                <div class="flex_center min-h-[35px] aspect-square">
                    <Image
                        src={obj.icon}
                        alt={obj.name.replaceAll(" ", "_") + "_Icon"}
                        width={35}
                        height={35}
                    />
                </div>
                <span class="text-[0.7em] tracking-wider font-orbitron smallCaps font-light">
                    {obj.name}
                </span>
            </div>
        ))
    }
</div>

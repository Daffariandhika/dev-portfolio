---
import {
    SectionTitle,
    SkillTitle,
    SkillGrid,
} from "./UI";

import {
    FrontendStack,
    BackendStack,
    ToolsStack,
} from "../utils/SkillStack";
---

<section id="skills" class="w-full min-h-screen px-6 py-4 pt-14 bg-background">
    <SectionTitle title="Tech Stack" color="primary" align="left"/>

    <div class="Fade_Up flex justify-center items-start flex-col gap-2">
        <div class="Fade_Up flex_center flex-col gap-4 py-4 xs:p-4 w-full h-full">
            <SkillTitle title="Frontend" color="primary" />
            <SkillGrid stack={FrontendStack} />
        </div>

        <div class="Fade_Up flex_center flex-col gap-4 py-4 xs:p-4 w-full h-full">
            <SkillTitle title="Backend" color="primary" />
            <SkillGrid stack={BackendStack} />
        </div>

        <div class="Fade_Up flex_center flex-col gap-4 py-4 xs:p-4 w-full h-full">
            <SkillTitle title="Dev Tools" color="primary" />
            <SkillGrid stack={ToolsStack} />
        </div>
    </div>
</section>

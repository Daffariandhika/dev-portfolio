---
const { title, description } = Astro.props;
import { SEO } from "astro-seo";
import { AstroFont } from "astro-font";
import { join } from "node:path";
import { Cursor, ProjectsHeader } from "../components/UI";
import { Footer } from "../components";
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <meta name="theme-color" content="#000" />
        <meta name="robots" content="index, follow" />
        <meta
            name="google-site-verification"
            content="google82953ef6a4732cd2"
        />
        <meta name="author" content="daffariandhika" />
        <link rel="manifest" href="/manifest.json" />

        <!-- Preload CSS Styles -->
        <link rel="preload stylesheet" href="/styles/global.css" as="style" />
        <link rel="preload stylesheet" href="/styles/utility.css" as="style" />
        <link rel="preload stylesheet" href="/styles/cursor.css" as="style" />

        <SEO
            title={title}
            description={description}
            canonical=`https://daffariandhika.vercel.app/projects/${title.replace(" | daffariandhika","").replaceAll(" ","-").toLowerCase()}`
            openGraph={{
                basic: {
                    title: `${title}`,
                    type: "website",
                    image: "/favicon.png",
                    url: "https://daffariandhika.vercel.app/",
                },
            }}
            extend={{
                link: [
                    { rel: "icon", type: "image/png", href: "/favicon.png" },
                    {
                        rel: "shortcut",
                        type: "image/png",
                        href: "/favicon.png",
                    },
                    {
                        rel: "apple-touch-icon",
                        type: "image/png",
                        href: "/favicon.png",
                    },
                ],
            }}
        />

        <AstroFont
            config={[
                {
                    name: "Poppins",
                    src: [
                        {
                            weight: "400",
                            style: "normal",
                            path: join(
                                process.cwd(),
                                "public",
                                "fonts",
                                "poppins-v20-latin-regular.woff2",
                            ),
                        },
                    ],
                    preload: true,
                    display: "swap",
                    fallback: "serif",
                    cssVariable: "astro-font-poppins",
                },
                {
                    name: "Orbitron",
                    src: [
                        {
                            weight: "700",
                            style: "normal",
                            path: join(
                                process.cwd(),
                                "public",
                                "fonts",
                                "Orbitron-VariableFont_wght.ttf",
                            ),
                        },
                    ],
                    preload: true,
                    display: "swap",
                    fallback: "serif",
                    cssVariable: "astro-font-orbitron",
                },
                {
                    name: "Grotesk",
                    src: [
                        {
                            weight: "400",
                            style: "normal",
                            path: join(
                                process.cwd(),
                                "public",
                                "fonts",
                                "Oxanium-VariableFont_wght.ttf",
                            ),
                        },
                    ],
                    preload: true,
                    display: "swap",
                    fallback: "serif",
                    cssVariable: "astro-font-grotesk",
                },
            ]}
        />
    </head>
    <body>
        <ProjectsHeader />

        <main class="px-6 md:px-8">
            <slot />
        </main>

        <Cursor />
        <Footer />
        <script src="../script.ts"></script>
    </body>
</html>
